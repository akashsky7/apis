<h1>Enter the details of new user!!</h1>

<form id="form" method="POST">
    
    <input type="text" placeholder="Enter  name" id="name">
    <input type="number" placeholder="Enter Salary" id="salary">
    <input type="number" placeholder="Enter Age" id="age">
    <input type="submit" value="Add Me">
</form>
<div id="results">

</div>

<body>
    <script>
        var form = document.getElementById('form');
        form.addEventListener('submit', function(e){
            //auto submission disable
            e.preventDefault();

            //var id = document.getElementById('id').value;
            var name = document.getElementById('name').value;
            var salary = document.getElementById('salary').value;
            var age = document.getElementById('age').value;
            

            //fetch
            fetch("https://jsonplaceholder.typicode.com/users", {
                method: 'POST',
                body: JSON.stringify({
                    //id: id,
                    name: name,
                    salary: salary,
                    age: age,
                    

                }),
                headers:{
                    "Content-Type":"application/json; charset=UTF-8"
                }
            })
            .then(function(response){
                return response.json()
            })
            .then(function(data){
                console.log(data);
                var results = document.getElementById('results')
                results.innerHTML = `<p>Welcome ${data.name}. Your details has been saved.</p>`
            })
        });
    </script>
</body>